# ========================================
# DATABASE & CACHING
# ========================================
DATABASE_URL="postgresql://username:password@localhost:5432/product-luncher?sslmode=disable"
REDIS_URL="redis://localhost:6379"

# ========================================
# AI & ML SERVICES
# ========================================
# OpenAI (Primary AI Provider)
OPENAI_API_KEY="sk-..."
OPENAI_ORGANIZATION="org-..."

# TogetherAI (Alternative AI Provider)
TOGETHER_API_KEY="tk-..."
TOGETHER_BASE_URL="https://api.together.xyz"

# Anthropic (Backup AI Provider)
ANTHROPIC_API_KEY="sk-ant-..."

# ========================================
# PAYMENTS & BILLING
# ========================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# MESSAGING & NOTIFICATIONS
# ========================================
# Twilio (WhatsApp & SMS)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_WHATSAPP_NUMBER="+1234567890"

# SendGrid (Email)
SENDGRID_API_KEY="SG..."
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="Product Luncher"

# ========================================
# E-COMMERCE INTEGRATIONS
# ========================================
# Shopify
SHOPIFY_API_KEY="..."
SHOPIFY_API_SECRET="..."
SHOPIFY_SCOPES="read_products,write_products,read_orders,write_orders"
SHOPIFY_WEBHOOK_SECRET="..."

# Meta Ads API
META_APP_ID="..."
META_APP_SECRET="..."
META_ACCESS_TOKEN="..."

# ========================================
# ANALYTICS & MONITORING
# ========================================
# Sentry (Error Monitoring)
SENTRY_DSN="https://..."
SENTRY_ENVIRONMENT="development"

# PostHog (Analytics)
POSTHOG_API_KEY="phc_..."
POSTHOG_HOST="https://app.posthog.com"

# ========================================
# SECURITY & COMPLIANCE
# ========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key"

# ========================================
# APPLICATION CONFIG
# ========================================
NODE_ENV="development"
PORT=3000
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# FILE STORAGE (Optional)
# ========================================
# AWS S3 or MinIO
AWS_ACCESS_KEY_ID="..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"
AWS_S3_BUCKET="product-luncher-assets"

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_FEATURES=true
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_SHOPIFY_SYNC=true
ENABLE_ANALYTICS=true
